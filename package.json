{
  "name": "mintable-token",
  "version": "1.0.0",
  "description": "",
  "main": "contracts/MintableToken.sol",
  "license": "Apache-2.0",
  "scripts": {
    "build": "hardhat compile --config ./hardhat.config.ts",
    "coverage": "hardhat coverage --config ./hardhat-coverage.config.ts --solcoverjs ./config/.solcover.ts",
    "test": "hardhat test --config ./hardhat.config.ts",
    "size": "hardhat size-contracts",
    "lint:check:eslint": "eslint . --ext js,ts",
    "lint:fix:format": "prettier --write **.{sol,js,ts}",
    "lint:fix:eslint": "eslint --fix . --ext js,ts",
    "deploy-goerli": "hardhat deploy --network goerli",
    "deploy-hardhat": "hardhat deploy --network hardhat",
    "flat:assemble": "echo '// SPDX-License-Identifier: Apache-2.0' > ./flat-deploy/MintableToken.sol && hardhat flatten ./contracts/MintableToken.sol > ./flat-deploy/temp.sol && grep -v SPDX ./flat-deploy/temp.sol >> ./flat-deploy/MintableToken.sol && rm ./flat-deploy/temp.sol",
    "flat:compile": "solc -o ./flat-deploy/output/ --overwrite --bin --abi --optimize --optimize-runs=200 flat-deploy/MintableToken.sol",
    "flat:hash": "shasum -a 256 ./flat-deploy/MintableToken.sol > ./flat-deploy/sourcecode-hash.txt",
    "flat:bytecodehash": "shasum -a 256 ./flat-deploy/output/MintableToken.bin > ./flat-deploy/bytecode-hash.txt",
    "flatten": "npm run flat:assemble && npm run flat:compile && npm run flat:hash && npm run flat:bytecodehash"
  },
  "author": "",
  "dependencies": {
    "@openzeppelin/contracts-upgradeable": "4.8.1"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-network-helpers": "^1.0.7",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@^0.3.0-beta.13",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@openzeppelin/hardhat-upgrades": "^1.22.0",
    "@openzeppelin/test-helpers": "^0.5.16",
    "@typechain/ethers-v5": "^10.2.0",
    "@typechain/hardhat": "^6.1.5",
    "@types/chai": "^4.3.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "chai": "^4.3.7",
    "dotenv": "^16.0.3",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-n": "^15.6.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.7.2",
    "hardhat": "2.12.5",
    "hardhat-contract-sizer": "^2.6.1",
    "hardhat-deploy": "^0.11.22",
    "hardhat-gas-reporter": "^1.0.9",
    "lint-staged": "^13.1.0",
    "prettier-plugin-solidity": "^1.1.1",
    "solhint": "^3.3.7",
    "solidity-coverage": "^0.7.22",
    "ts-node": "^10.4.0",
    "typechain": "^8.1.1",
    "typescript": "^4.9.4"
  },
  "overrides": {
    "@nomiclabs/hardhat-waffle": {
      "@nomiclabs/hardhat-ethers": "$@nomiclabs/hardhat-ethers"
    },
    "@openzeppelin/hardhat-upgrades": {
      "@nomiclabs/hardhat-ethers": "$@nomiclabs/hardhat-ethers"
    }
  },
  "lint-staged": {
    "*.sol": "prettier --write",
    "*.js": "prettier --write",
    "*.ts": "prettier --write"
  }
}
